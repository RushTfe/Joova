<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootProductos" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="anadirProductoButton" mnemonicParsing="false" text="+" />
            <Button fx:id="eliminarProductoButton" mnemonicParsing="false" text="Elim" />
            <Button fx:id="modificarProductoButton" mnemonicParsing="false" text="Modif" />
            <TextField fx:id="busquedaTextField" promptText="BÃºsqueda" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tablaProductos" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="imagenColumn" prefWidth="75.0" text="Imagen" />
                <TableColumn fx:id="nombreProductoColumn" prefWidth="75.0" text="Nombre" />
                  <TableColumn fx:id="tipoProductoColumn" prefWidth="75.0" text="Tipo de Producto" />
                  <TableColumn fx:id="preciosColumn" prefWidth="75.0" text="Historico de precios" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </AnchorPane>
   </center>
</BorderPane>
