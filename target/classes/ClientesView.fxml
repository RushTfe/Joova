            <Button fx:id="modificarClienteButton" mnemonicParsing="false" text="Modif" />
            <TextField fx:id="busquedaCliente" promptText="Nombre Cliente..." />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
