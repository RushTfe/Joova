   <center>
      <TableView fx:id="clientTable" fixedCellSize="0.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="dniColumn" prefWidth="75.0" text="DNI" />
            <TableColumn fx:id="nombreColumn" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="apellidoColumn" prefWidth="75.0" text="Apellido" />
            <TableColumn fx:id="tlfColumn" prefWidth="75.0" text="TelÃ©fono" />
            <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="nacimientoColumn" prefWidth="75.0" text="FechaNacimiento" />
            <TableColumn fx:id="direccionColumn" prefWidth="75.0" text="Direccion" />
            <TableColumn fx:id="observacionesColumn" prefWidth="75.0" text="Observaciones" />
            <TableColumn fx:id="generoColumn" prefWidth="75.0" text="Genero" />
            <TableColumn fx:id="huerfanoColumn" prefWidth="75.0" text="Huerfano" />
